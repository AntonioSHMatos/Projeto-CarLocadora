@model CarLocadora.Models.Models.VeiculoModel



<div class="row">
    <div class="col-sm-6">
        <div class="form-group">
            <label asp-for="CategoriaId" class="control-label"></label>
            <select asp-for="CategoriaId" asp-items="ViewBag.CategoriasDeVeiculos" class="form-control text-uppercase">
            </select>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            <label asp-for="Placa" class="control-label"></label>
            <input asp-for="Placa" class="form-control maskPlaca" />
            <span asp-validation-for="Placa" class="text-danger"></span>
        </div>
    </div>

</div>


<div class="row">
    <div class="col-sm-3">
        <div class="form-group">
            <label asp-for="Chassi" class="control-label"></label>
            <input asp-for="Chassi" class="form-control" />
            <span asp-validation-for="Chassi" class="text-danger"></span>
        </div>
    </div>


    <div class="col-sm-3">
        <div class="form-group">
            <label asp-for="Marca" class="control-label"></label>
            <input asp-for="Marca" class="form-control" />
            <span asp-validation-for="Marca" class="text-danger"></span>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group">
            <label asp-for="Modelo" class="control-label"></label>
            <input asp-for="Modelo" class="form-control" />
            <span asp-validation-for="Modelo" class="text-danger"></span>
        </div>
    </div>

    <div class="col-sm-3">
        <div class="form-group">
            <label asp-for="Combustivel" class="control-label"></label>
            <select asp-for="Combustivel" class="form-control">
                <option selected="">Selecione</option>
                <option>DIESEL</option>
                <option>ELÉTRICO</option>
                <option>ETANOL</option>
                <option>FLEX</option>
                <option>GASOLINA</option>
                <option>GNV</option>
                <option>HÍBRIDO</option>
                <option>OUTROS</option>
            </select>
            <span asp-validation-for="Modelo" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-6">
        <div class="form-group">
            <label asp-for="Cor" class="control-label"></label>
            <select asp-for="Cor" class="form-control">
                <option selected="" disabled="">Selecione</option>
                <option>AMARELO</option>
                <option>AZUL</option>
                <option>BEGE</option>
                <option>BRANCA</option>
                <option>CINZA</option>
                <option>DOURADA</option>
                <option>GRENA</option>
                <option>LARANJA</option>
                <option>MARROM</option>
                <option>PRATA</option>
                <option>PRETA</option>
                <option>ROSA</option>
                <option>ROXA</option>
                <option>VERDE</option>
                <option>VERMELHA</option>
                <option>FANTASIA</option>
            </select>
            <span asp-validation-for="Cor" class="text-danger"></span>
        </div>
    </div>

    <div class="col-sm-6">
        <div class="form-group">
            <label asp-for="Opcionais" class="control-label"></label>
            <input asp-for="Opcionais" class="form-control" />
            <span asp-validation-for="Opcionais" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-3">
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
            </label>
        </div>
    </div>
</div>
