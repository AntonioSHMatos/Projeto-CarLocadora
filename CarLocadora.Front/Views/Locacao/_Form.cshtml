@model CarLocadora.Models.Models.LocacaoModel


<div class="row">
    <div class="col-sm-3">
        <div class="form-group">
            <label asp-for="ClienteCPF" class="control-label"></label>
            <select asp-for="ClienteCPF" asp-items="ViewBag.Clientes" class="form-control text-uppercase">
            <option disabled selected> </option>
