<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarLocadora.Front</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarLocadora.Front.styles.css" asp-append-version="true" />
</head>

                                                       @*    cor da cabeçalho bg-sucsess*@
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-success border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand  text-white" asp-area="" asp-controller="Home" asp-action="Index">Car Locadora</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark  text-white" asp-area="" asp-controller="Categoria" asp-action="Index"><i class="fa-solid fa-car"></i>Categoria</a>
                        <li class="nav-item">

                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark  text-white" asp-area="" asp-controller="Cliente" asp-action="Index">
                                <i class="fa-solid fa-people-group"></i>
                                Cliente
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark  text-white" asp-area="" asp-controller="FormaPagamento" asp-action="Index">
                               <i class="fa-solid fa-sack-dollar"></i>
                                Forma Pagamento
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark  text-white" asp-area="" asp-controller="Usuario" asp-action="Index"><i class="fa-solid fa-user"></i>Usuario</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark  text-white" asp-area="" asp-controller="Veiculo" asp-action="Index"><i class="fa-solid fa-car"></i>Veiculo</a>
                        </li>

                        <li>
                        <li class="nav-item">
                            <a class="nav-link text-dark text-white" asp-area="" asp-controller="ManutencaoVeiculo" asp-action="Index"> <i class="fa-solid fa-screwdriver-wrench"></i><i class="fa-solid fa-car-burst"></i>Manutenção Veiculo</a>
                        </li>
                        <li>
                        <li class="nav-item">
                            <a class="nav-link text-dark text-white" asp-area="" asp-controller="Vistoria" asp-action="Index"><i class="fa-solid fa-road-circle-check"></i>Vistoria Veiculo</a>
                        </li>
                        <li>
                        <li class="nav-item">
                            <a class="nav-link text-dark text-white" asp-area="" asp-controller="Locacao" asp-action="Index"><i class="fa-solid fa-car"></i>Locação Veiculo</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @* cor do rodapé bg sucess*@
    <footer class="border-top footer text-muted bg-success">
        <div class="container">
            &copy; 2022 - CarLocadora.Front - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/inputmask/jquery.inputmask.bundle.min.js"></script>
    <script src="~/lib/font-awesome/js/all.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>